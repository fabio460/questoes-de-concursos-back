generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id String  @id @default(auto()) @map("_id") @db.ObjectId
  email String @db.ObjectId
  nome String?
  senha String?
}

model Materia {
  id String  @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  assunto Assunto[] 
}

model Assunto {
  id String  @id @default(auto()) @map("_id") @db.ObjectId
  nome String
  questao Questao[]
  idDaMateria String @db.ObjectId
  materia Materia @relation(fields: [idDaMateria],  references: [id])
}

model Questao {
  id String  @id @default(auto()) @map("_id") @db.ObjectId
  pergunta String
  respostas Respostas[]
  imagem String?
  comentario String?
  idDaRespostas String @db.ObjectId
  idDoAssunto String @db.ObjectId
  assunto Assunto @relation(fields: [idDoAssunto], references: [id])
}

model Respostas {
    id String  @id @default(auto()) @map("_id") @db.ObjectId
    letra String
    conteudo String
    imagem String?
    estaCerta Boolean
    idDaQuestao String @db.ObjectId
    questao Questao @relation(fields: [idDaQuestao], references: [id])
}
